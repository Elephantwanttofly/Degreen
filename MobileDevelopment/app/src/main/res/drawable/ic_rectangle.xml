<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna latar belakang (kosong) -->
    <solid android:color="#D9D9D9" />

    <!-- Warna border dan ketebalan border -->
    <stroke
        android:color="#D9D9D9"
    android:width="2dp" /> <!-- Ganti dengan ketebalan yang diinginkan -->

    <!-- Radius sudut (opsional) -->
    <corners android:radius="50dp" /> <!-- Ganti dengan nilai radius yang diinginkan -->

    <!-- Panjang dan lebar -->
    <size
        android:width="1200dp"
    android:height="700dp" /> <!-- Ganti dengan lebar yang diinginkan -->

</shape>
